<div class="row justify-content-center">
    <div class="col-md-6 post-list">
        {{#if blogPosts.length}}
        <h3 class="my-4">{{name}}'s Blog:</h3>
        {{!-- loop through and display user posts --}}
        {{#each blogPosts as |blogPost|}}
        <div class="row my-4">
            <div class="col">
                <div class="custom-card">
                    <a href="/dashboard/{{id}}" class='text-reset text-decoration-none'>
                        <div class="bg-dark text-light p-2 d-flex justify-content-between">
                            <h3>{{blogPost.title}}</h3>
                            {{#if blogPost.date_updated}}
                            <div>
                                <em class="lead text-secondary fs-6 me-1">edited</em>
                                <em class="my-auto">{{format_date blogPost.date_updated}}</em>
                            </div>
                            {{else}}
                            <em class="my-auto">{{format_date blogPost.date_created}}</em>
                            {{/if}}
                        </div>
                        <div class="px-2 pt-2 my-1">
                            <h5 class="lead">{{blogPost.description}}</h5>
                            <p class="blockquote-footer custom-at mt-1">@{{blogPost.user.name}}</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
{{!-- display if no posts --}}
<div class="col text-center">
    <h1 class="my-4">You have not created any posts!</h1>
</div>
{{/if}}
</div>

<div class="row">
    <div class="col d-flex justify-content-center">
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content custom-modal">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Create a New Blog Post</h5>
                    </div>
                    <div class="modal-body">

                        <form class="mt-3">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    placeholder="Enter title" required>
                            </div>
                            <div class="mb-3">
                                <label for="content" class="form-label">Content</label>
                                <textarea class="form-control" id="content" name="content" rows="6"
                                    placeholder="Enter description" required></textarea>
                            </div>
                        </form>

                    </div>
                    <div class="mb-3 mx-auto">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="custom-button btn" id="post">Post</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Button trigger modal -->
        <button type="button" class="custom-button btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Create
        </button>
    </div>
</div>

<script src="/js/dashboard.js"></script>